@model IEnumerable<GStore.Models.Categoria>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1 class="my-4">Categorias</h1>
<a asp-action="Create" class="btn btn-primary">
    <i class="fas fa-add me-1"></i> Adicionar
</a>

<div class="card my-4">
    <div class="card-body">
        <table class="table" id="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Nome)
                    </th>
                    <th>Ações&nbsp;&nbsp;&nbsp;</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nome)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" title="Alterar">
                            <div class="sb-nav-link-icon"> <i class="fas fa-edit me-1"></i><div/>
                            </a>
                            <a asp-action="Details" asp-route-id="@item.Id" title="Detalhes">
                            <div class="sb-nav-link-icon"/> <i class="fas fa seacrh me-1"></i><div/>
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" title="Excluir">
                            <div class="sb-nav-link-icon"/> <i class="fas fa trash"></i><div/>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <partial name="_DatatableScripts.cshtml"></partial>
}